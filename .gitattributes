<script>

  const botoesSecao = document.getElementById('secaoBotoes');
  window.addEventListener('scroll', () => {
    const posicao = botoesSecao.getBoundingClientRect().top;
    if (posicao < window.innerHeight - 50) {
      botoesSecao.classList.add('visivel');
    }
  });

  const botoes = document.querySelectorAll('.botao');
  const conteudos = document.querySelectorAll('.conteudo');

  botoes.forEach(botao => {
    botao.addEventListener('click', () => {
     
      botoes.forEach(b => b.classList.remove('ativo'));
      botao.classList.add('ativo');

      conteudos.forEach(c => c.classList.remove('ativo'));
      const idConteudo = 'conteudo-' + botao.dataset.conteudo;
      const conteudo = document.getElementById(idConteudo);
      if (conteudo) conteudo.classList.add('ativo');
    });
  });
</script>

